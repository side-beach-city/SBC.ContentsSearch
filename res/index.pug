mixin nav-item(id, caption)
  li.nav-item
    a.nav-link(
      data-toggle="tab",
      role="tab",
      id=`tabs_${id}`,
      href=`#contents_${id}`,
      aria-control=`contents_${id}`
    ) #{caption}
mixin tab(name)
  .tab-pane.fade(
    role="tabpanel",
    id=`contents_${name}`,
    aria-labelledby=`tabs_${name}`
  )
    block

